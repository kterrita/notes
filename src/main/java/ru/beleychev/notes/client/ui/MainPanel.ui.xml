<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">
    <g:DockLayoutPanel ui:field="mainPanel" unit="EM">
        <g:north size="5">
            <g:HorizontalPanel ui:field="northPanel">
                <g:VerticalPanel ui:field="userDatePanel">
                    <g:Label ui:field="usernameLabel"/>
                    <g:DateLabel ui:field="currentDateLabel" customFormat="EEE, MMM d, yyyy"/>
                </g:VerticalPanel>
                <g:HorizontalPanel ui:field="searchPanel">
                    <g:TextBox ui:field="searchBox"/>
                    <g:Button ui:field="searchButton"/>
                </g:HorizontalPanel>
            </g:HorizontalPanel>
        </g:north>
        <g:south size="5">
            <g:HorizontalPanel ui:field="southPanel">
                <g:Label ui:field="rightsReservedLabel"/>
            </g:HorizontalPanel>
        </g:south>
        <g:west size="10">
            <g:VerticalPanel ui:field="navigationPanel">
                <g:Label ui:field="allNotes" text="All notes"/>
                <g:Label ui:field="important" text="Important"/>
                <g:Label ui:field="favorite" text="Favorite"/>
                <g:Label ui:field="recycleBin" text="Recycle bin"/>
            </g:VerticalPanel>
        </g:west>
        <g:center>
            <c:DataGrid ui:field="notesList" width="100%" height="100%"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>